{
  "$schema": "https://raw.githubusercontent.com/reVISit-studies/study/main/src/parser/StudyConfigSchema.json",
  "studyMetadata": {
    "title": "Basic Questionnaire Study",
    "version": "pilot",
    "authors": ["The reVISit Team"],
    "date": "2024-06-26",
    "description": "A simple questionnaire study",
    "organizations": ["University of Utah", "WPI", "University of Toronto"]
  },
  "uiConfig": {
    "contactEmail": "contact@revisit.dev",
    "helpTextPath": "emma-study/assets/help.md",
    "logoPath": "revisitAssets/revisitLogoSquare.svg",
    "withProgressBar": true,
    "autoDownloadStudy": false,
    "sidebar": true
  },
  "components": {
    "introduction": {
      "type": "markdown",
      "path": "emma-study/assets/introduction.md",
      "response": []
    },
    "firstScatter": {
      "type": "react-component",
      "path": "emma-jnd/vistaJND/src/components/vis/ScatterWrapper.tsx",
      "parameters": {
        "r1": 0.2,
        "r2": 0.8

      },
      "response": [{
        "id": "q-radio",
        "prompt": "Radio button example",
        "required": true,
        "location": "aboveStimulus",
        "type": "radio",
        "options": [
          {
            "label": "Option 1",
            "value": "opt-1"
          },
          {
            "label": "Option 2",
            "value": "opt-2"
          }
        ]
       }]
    }
  },
  "sequence": {
    "order": "fixed",
    "components": ["introduction", "firstScatter"]
  }
}
